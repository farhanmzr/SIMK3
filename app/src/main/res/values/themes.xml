<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SIMK3" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary500</item>
        <item name="colorPrimaryVariant">@color/colorPrimary500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>

    <!--<<<<<<<<<<<<<<<<<<<<<<<<<< BUTTON STYLE >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:backgroundTint">@color/color_states_materialbutton</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!--<<<<<<<<<<<<<<<<<<<<<<<<<< IMAGE BACK STYLE >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="ImageBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <!--<<<<<<<<<<<<<<<<<<<<<<<<<< TEXT STYLE >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="TxtStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    //48sp
    <style name="TxtStyle.Heavy48">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/colorSecondary500</item>
        <item name="android:fontFamily">@font/sf_pro_display_heavy</item>
    </style>

    //32sp
    <style name="TxtStyle.Bold32">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorNeutral500</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    //24sp
    <style name="TxtStyle.Bold24">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorNeutral500</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    //18sp
    <style name="TxtStyle.Bold18">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>

    //16sp
    <style name="TxtStyle.Bold16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorNeutral500</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>
    <style name="TxtStyle.SemiBold16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorNeutral500</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>
    <style name="TxtStyle.Medium16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorNeutral300</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    //14sp
    <style name="TxtStyle.Bold14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorNeutral500</item>
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
    </style>
    <style name="TxtStyle.SemiBold14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorNeutral500</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
    </style>
    <style name="TxtStyle.Medium14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorNeutral300</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>
    <style name="TxtStyle.Regular14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    //12sp
    <style name="TxtStyle.Medium12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>
    <style name="TxtStyle.Regular12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorNeutral300</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <style name="TextHintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--<<<<<<<<<<<<<<<<<<<<<<<<<< RESPONSIVE STYLE >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="Responsive24dp">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <!--<<<<<<<<<<<<<<<<<<<<<<<<<< DIALOG DATE STYLE >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary500</item>
        <item name="android:textColor">@color/colorPrimary500</item>
        <item name="android:textColorPrimary">@color/colorPrimary500</item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/DatePickerTheme.ButtonBarNegativeButtonStyle</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary500</item>
    </style>

    <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/MyBottomNavigationView.TextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/MyBottomNavigationView.TextAppearance</item>
    </style>
    <style name="MyBottomNavigationView.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
    </style>






</resources>