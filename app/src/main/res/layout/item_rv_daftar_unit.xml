<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        style="@style/Responsive24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_nama_unit"
                style="@style/TxtStyle.SemiBold16"
                android:layout_width="0dp"
                android:ellipsize="end"
                android:layout_marginStart="0dp"
                android:maxLines="1"
                android:paddingEnd="16dp"
                android:textColor="@color/colorSecBlack"
                app:layout_constraintEnd_toStartOf="@+id/ic_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="P2K3" />

            <ImageView
                android:id="@+id/ic_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_edit"
                app:layout_constraintEnd_toStartOf="@+id/ic_delete"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/ic_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_trash"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.75dp"
        style="@style/Responsive24dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorBorderF8"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>