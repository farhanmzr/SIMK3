<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:paddingHorizontal="16dp"
    android:paddingVertical="24dp"
    tools:context="view.main.inventory.tambahapar.dialogmediaapar.DialogMediaAparFragment">

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:text="Pilih Media Apar"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorNeutral100"
        app:layout_constraintTop_toBottomOf="@+id/textView34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RadioGroup
        android:id="@+id/rg_kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <RadioButton
            android:id="@+id/apar_air"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary500"
            android:fontFamily="@font/sf_pro_display_medium"
            android:paddingStart="8dp"
            android:text="APAR Air"
            android:textColor="@color/colorSecBlack"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/apar_busa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary500"
            android:fontFamily="@font/sf_pro_display_medium"
            android:paddingStart="8dp"
            android:text="APAR Busa"
            android:textColor="@color/colorSecBlack"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/apar_serbuk_kimia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary500"
            android:fontFamily="@font/sf_pro_display_medium"
            android:paddingStart="8dp"
            android:text="APAR Serbuk Kimia"
            android:textColor="@color/colorSecBlack"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/apar_karbondioksida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary500"
            android:fontFamily="@font/sf_pro_display_medium"
            android:paddingStart="8dp"
            android:text="APAR CO2"
            android:textColor="@color/colorSecBlack"
            android:textSize="16sp" />

    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pilih_kategori"
        style="@style/ButtonStyle"
        app:cornerRadius="8dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="24dp"
        android:text="@string/pilih"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_kategori" />

</androidx.constraintlayout.widget.ConstraintLayout>
