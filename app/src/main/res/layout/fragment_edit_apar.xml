<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.main.inventory.detailinventory.editapar.EditAparFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <LinearLayout
                android:id="@+id/linearbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/ic_back"
                        android:layout_marginTop="0dp"
                        style="@style/ImageBackStyle"
                        android:paddingVertical="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_bold"
                        android:text="@string/edit_apar"
                        android:textColor="@color/colorNeutral500"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                style="@style/TxtStyle.Medium14"
                android:layout_width="0dp"
                android:layout_marginTop="8dp"
                android:paddingEnd="24dp"
                android:text="@string/masukkan_data_informasi_apar_dibawah_ini_dengan_lengkap_dan_benar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearbar" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <TextView
                    style="@style/TxtStyle.SemiBold14"
                    android:layout_marginStart="0dp"
                    android:text="@string/media"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/colorNeutral100"
                    app:boxStrokeWidth="1.5dp"
                    app:hintEnabled="false"
                    app:placeholderText="Pilih media"
                    app:placeholderTextColor="@color/colorNeutral200"
                    app:expandedHintEnabled="false"
                    app:placeholderTextAppearance="@style/TextHintStyle"
                    app:endIconDrawable="@drawable/ic_arrow_down"
                    app:endIconMode="custom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_media"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:inputType="text"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:textColor="@color/colorNeutral500"
                        android:textColorHint="@color/colorNeutral200"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <TextView
                    style="@style/TxtStyle.SemiBold14"
                    android:layout_marginStart="0dp"
                    android:text="@string/tipe"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/colorNeutral100"
                    app:boxStrokeWidth="1.5dp"
                    app:hintEnabled="false"
                    app:placeholderText="Masukkan tipe benda disini"
                    app:placeholderTextColor="@color/colorNeutral200"
                    app:expandedHintEnabled="false"
                    app:placeholderTextAppearance="@style/TextHintStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_tipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:inputType="text"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:textColor="@color/colorNeutral500"
                        android:textColorHint="@color/colorNeutral200"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <TextView
                    style="@style/TxtStyle.SemiBold14"
                    android:layout_marginStart="0dp"
                    android:text="@string/unit_departemen"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/colorNeutral100"
                    app:boxStrokeWidth="1.5dp"
                    app:hintEnabled="false"
                    app:placeholderText="Pilih unit departemen disini"
                    app:placeholderTextColor="@color/colorNeutral200"
                    app:expandedHintEnabled="false"
                    app:placeholderTextAppearance="@style/TextHintStyle"
                    app:endIconDrawable="@drawable/ic_arrow_down"
                    app:endIconMode="custom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_unit_departemen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:inputType="text"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:textColor="@color/colorNeutral500"
                        android:textColorHint="@color/colorNeutral200"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                <TextView
                    style="@style/TxtStyle.SemiBold14"
                    android:layout_marginStart="0dp"
                    android:text="@string/lokasi"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/colorNeutral100"
                    app:boxStrokeWidth="1.5dp"
                    app:hintEnabled="false"
                    app:placeholderText="Masukkan lokasi benda disini"
                    app:placeholderTextColor="@color/colorNeutral200"
                    app:expandedHintEnabled="false"
                    app:placeholderTextAppearance="@style/TextHintStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_lokasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:inputType="text"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:textColor="@color/colorNeutral500"
                        android:textColorHint="@color/colorNeutral200"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

                <TextView
                    style="@style/TxtStyle.SemiBold14"
                    android:layout_marginStart="0dp"
                    android:text="@string/kapasitas_kg"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/colorNeutral100"
                    app:boxStrokeWidth="1.5dp"
                    app:hintEnabled="false"
                    app:placeholderText="Masukkan berat benda disini"
                    app:placeholderTextColor="@color/colorNeutral200"
                    app:expandedHintEnabled="false"
                    app:placeholderTextAppearance="@style/TextHintStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_kapasitas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:inputType="number"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:maxLength="4"
                        android:textColor="@color/colorNeutral500"
                        android:textColorHint="@color/colorNeutral200"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

                <TextView
                    style="@style/TxtStyle.SemiBold14"
                    android:layout_marginStart="0dp"
                    android:text="@string/tanggal_pembelian"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/colorNeutral100"
                    app:boxStrokeWidth="1.5dp"
                    app:hintEnabled="false"
                    app:placeholderText="Pilih tanggal pembelian"
                    app:placeholderTextColor="@color/colorNeutral200"
                    app:expandedHintEnabled="false"
                    app:placeholderTextAppearance="@style/TextHintStyle"
                    app:endIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_tanggal_pembelian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:inputType="text"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:textColor="@color/colorNeutral500"
                        android:textColorHint="@color/colorNeutral200"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

                <TextView
                    style="@style/TxtStyle.SemiBold14"
                    android:layout_marginStart="0dp"
                    android:text="@string/tanggal_kadaluwarsa"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/colorNeutral100"
                    app:boxStrokeWidth="1.5dp"
                    app:hintEnabled="false"
                    app:placeholderText="Pilih tanggal kadaluwarsa"
                    app:placeholderTextColor="@color/colorNeutral200"
                    app:expandedHintEnabled="false"
                    app:placeholderTextAppearance="@style/TextHintStyle"
                    app:endIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_tanggal_kadaluwarsa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_regular"
                        android:inputType="text"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:textColor="@color/colorNeutral500"
                        android:textColorHint="@color/colorNeutral200"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:background="@color/colorNeutral100"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_apar"
                style="@style/ButtonStyle"
                app:cornerRadius="8dp"
                android:text="@string/perbarui_apar"
                android:shadowRadius="0"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>