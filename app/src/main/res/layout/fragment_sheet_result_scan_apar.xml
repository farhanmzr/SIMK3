<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_result_scan_apar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/btn_close"
        style="@style/ImageBackStyle"
        android:background="@null"
        android:src="@drawable/ic_close"
        app:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/TxtStyle.Bold16"
        android:text="@string/informasi_apar"
        android:textColor="@color/colorSecBlack"
        app:layout_constraintBottom_toBottomOf="@+id/btn_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_close" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorNeutral100"
        app:layout_constraintTop_toBottomOf="@+id/btn_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:layout_marginTop="24dp"
        style="@style/Responsive24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/id"
                android:textColor="@color/colorNeutral300"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_id_apar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorNeutral500"
                tools:text="1"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/nama_benda"
                android:textColor="@color/colorNeutral300"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_nama_apar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                tools:text="APAR AIR"
                android:textColor="@color/colorNeutral500"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/media"
                android:textColor="@color/colorNeutral300"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_media_apar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                tools:text="AIR"
                android:textColor="@color/colorNeutral500"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/tipe"
                android:textColor="@color/colorNeutral300"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_tipe_apar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                tools:text="AA-1"
                android:textColor="@color/colorNeutral500"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/kapasitas"
                android:textColor="@color/colorNeutral300"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_kapasitas_apar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                tools:text="3 kg"
                android:textColor="@color/colorNeutral500"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/unit_departemen"
                android:textColor="@color/colorNeutral300"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_unit_departemen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                tools:text="Teknik Komputer"
                android:textColor="@color/colorNeutral500"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/lokasi"
                android:textColor="@color/colorNeutral300"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_lokasi_apar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                tools:text="Perpustakaan"
                android:textColor="@color/colorNeutral500"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/kadaluwarsa"
                android:textColor="@color/colorNeutral300"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_tanggal_pembelian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                tools:text="3 Agustus 2022"
                android:textColor="@color/colorNeutral500"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/terakhir_inspeksi"
                android:textColor="@color/colorNeutral300"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_terakhir_inspeksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                tools:text="10 Agustus 2022"
                android:textColor="@color/colorNeutral500"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="@string/kondisi_terakhir"
                android:textColor="@color/colorNeutral300"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_kodepos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:gravity="end"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center_vertical"
                tools:text="Kondisi Baik"
                android:textColor="@color/colorNeutral300"
                android:textSize="16sp" />

        </TableRow>

    </TableLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_inspeksi_apar"
        style="@style/ButtonStyle"
        app:cornerRadius="8dp"
        android:text="@string/inspeksi_apar_sekarang"
        android:shadowRadius="0"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/btn_edit_apar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_neutral_outline"
        style="@style/Responsive24dp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_inspeksi_apar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_skip"
            style="@style/TxtStyle.Bold16"
            android:padding="12dp"
            android:text="@string/edit_informasi_apar"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>